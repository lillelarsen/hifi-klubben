<% include ../partials/head.ejs %>
<% include ./partials/admin-header.ejs %>
<% include ./partials/admin-primaryNavigation.ejs %>
<main role="main" class="adminPage">
	<h1><%= title %></h1>
	<p><%= content %></p>
	<a href="#" class="addButton" onclick="openForm()">Tilføj Kategori</a>
	<table>
		<thead>
			<tr>
				<th>Redigér</th>
				<th>Slet</th>
				<th>Kategori</th>
			</tr>
		</thead>
		<tbody>
			<% results.forEach(result => { %>
			<tr>
				<td onclick="openUpdateForm()"><i class="fas fa-edit" onclick="openUpdateForm()"></i></td>
				<td><i data-id="<%= result.id %>" data-category="categories" class="fas fa-trash-alt"></i></td>
				<td onclick="openUpdateForm()">
					<%= result.name %>
				</td>
			</tr>
			<% }); %>
		</tbody>
	</table>
</main>
<div id="addTo" class="addForm">
	<a href="/admin/categories" onclick="closeForm()"><i class="fas fa-times"></i></a>
	<h2>Tilføj Kategori</h2>
	<form action="" method="post">
		<label for="categoryName">Kategori navn</label><input type="text" name="name" id="categoryName" placeholder="Vælg et navn til kategorien">
		<button type="submit">Gem kategorien</button>
	</form>
</div>
<div id="updateTo" class="updateForm">
	<a href="" onclick="closeUpdateForm()"><i class="fas fa-times"></i></a>
	<h2>Opdater Kategori</h2>
	<form id="updateForm" action="" method="post">
		<label for="name">Kategori navn</label><input type="text" name="name">
		<button type="submit">Gem ændringer</button>
	</form>
</div>
<script src="/scripts/deleteButtons.js" defer></script>
<script src="/scripts/updateBox.js" defer></script>
<script src="/scripts/addBox.js" defer></script>
<% include ../partials/after-footer.ejs %>